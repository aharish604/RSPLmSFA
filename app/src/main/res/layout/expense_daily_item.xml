<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:id="@+id/sp_expense_item_type"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="fill_parent"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/ll_item_beat"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:id="@+id/sp_expense_item_beat"
                style="@style/spinner_style"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_beat_line"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="fill_parent"
            android:background="@color/line_color"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ll_item_location"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:id="@+id/sp_expense_item_location"
                style="@style/spinner_style"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_location_line"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="fill_parent"
            android:background="@color/line_color"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ll_item_mode"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:minHeight="30dp"
                android:gravity="center_vertical"
                android:id="@+id/sp_expense_item_mode"
                style="@style/spinner_style"
                android:layout_margin="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_mode_line"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="fill_parent"
            android:background="@color/line_color"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ll_item_distance"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:layout_margin="@dimen/_3sdp"
                android:id="@+id/ed_expense_item_distance"
                style="@style/EditBookTextEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint=""
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="numberDecimal"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_distance_line"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="fill_parent"
            android:background="@color/line_color"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_exp_item_amount"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_point_one_dip"
            android:layout_marginRight="@dimen/margin_point_one_dip"
            android:background="@color/WHITE"
            android:gravity="right|center_vertical"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingEnd="@dimen/padding_three_dip"
            android:paddingLeft="@dimen/padding_zero_dip"
            android:paddingRight="@dimen/padding_three_dip"
            android:paddingStart="@dimen/padding_zero_dip"
            android:paddingTop="@dimen/_5sdp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/medium_text" />

        <EditText
            android:id="@+id/ed_expense_item_amount"
            style="@style/EditBookTextEdit"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint=""
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/padding_three_dip"
            android:paddingRight="@dimen/padding_three_dip"
            android:textSize="@dimen/medium_text"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="fill_parent"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/iv_open_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/line_color" />


</LinearLayout>