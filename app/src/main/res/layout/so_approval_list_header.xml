<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_alice_blue"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="@dimen/height_zero_dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="2.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/so_order_no"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/so_order_date"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/height_zero_dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_so_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/lbl_collection_doc_num"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_so_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/so_ap_channel_customer"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/height_zero_dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_so_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:paddingLeft="@dimen/_6sdp"
                android:text="d"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_delv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:gravity="bottom|center"
                android:text="@string/so_ap_priority"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>