<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textViewCompetitorName"
        android:gravity="start"
        android:padding="@dimen/_3sdp"
        android:background="@color/light_alice_blue"
        android:textStyle="bold"
        android:textSize="@dimen/large_text"
        android:textColor="@color/BLACK"
        android:text="@string/lbl_competitor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />
    <View
        android:layout_width="match_parent"
        android:background="@color/BLACK"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:background="@color/light_alice_blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewRetailBrand"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:padding="@dimen/_5sdp"
            android:text="@string/tvMaterial"
            android:layout_gravity="center"
            android:textColor="@color/BLACK"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/BLACK"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/qty"
            android:paddingRight="@dimen/_1sdp"
            android:textColor="@color/BLACK"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/BLACK"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewNos"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="@string/uom"
            android:textColor="@color/BLACK"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewMaterial"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="start"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/BLACK"
            android:minHeight="@dimen/_40sdp"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/BLACK"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewInputQuantity"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="end|center"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/BLACK"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:background="@color/BLACK"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewUOM"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="start|center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/BLACK"
            android:padding="@dimen/_1sdp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>