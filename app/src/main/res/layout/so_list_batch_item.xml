<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:id="@+id/ll_so_create_line_item_sub"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/width_zero_dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_item_so_create_sku_grp_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/large_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_so_create_soq_sub"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text"/>

                <TextView
                    android:id="@+id/tv_item_so_create_mrp_sub"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_item_so_create_db_stk_sub"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_item_so_create_ret_stk_sub"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />



                <EditText
                    android:id="@+id/et_item_so_create_ord_qty_sub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="right|center"
                    android:paddingRight="4dp"
                    android:textSize="@dimen/medium_text"
                    android:hint="@string/qty"
                    android:textColor="@color/BLACK"
                    style="@style/EditBookTextEdit"
                    android:inputType="numberDecimal" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_weight="0.1"
            android:layout_width="@dimen/padding_zero_dip"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_expand_all"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <View
        android:id="@+id/view_line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GREY"/>


</LinearLayout>
