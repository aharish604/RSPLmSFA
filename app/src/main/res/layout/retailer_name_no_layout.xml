<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_three_dip"
        android:visibility="visible">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/padding_six_dip"
            android:layout_marginLeft="@dimen/padding_six_dip"
            android:contentDescription="@null"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_three_dip" >

            <TextView
                android:id="@+id/tv_reatiler_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/BLACK"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reatiler_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_reatiler_name"
                android:textColor="@color/icon_text_blue"
                android:textSize="@dimen/medium_text" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>