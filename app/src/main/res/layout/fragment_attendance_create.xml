<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rspl.sf.msfa.appointment.Fragment.AttendanceCreateFragment">

    <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:background="@color/HeaderTileBackground">

          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/lbl_appointment_create"
              android:textColor="@color/header_tile_text_color"
              android:textSize="@dimen/large_text" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="@dimen/padding_four_dip" >

          <LinearLayout
              android:layout_width="@dimen/width_zero_dip"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:orientation="horizontal"
              android:layout_weight="1"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="start"
                  android:paddingLeft="@dimen/padding_three_dip"
                  android:paddingRight="@dimen/padding_zero_dip"
                  android:paddingStart="@dimen/padding_zero_dip"
                  android:paddingEnd="@dimen/padding_zero_dip"
                  android:text="@string/lbl_retailer_name"
                  android:textColor="@color/TEXT_COLOR"
                  android:textSize="@dimen/medium_text" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top|center"
                  android:paddingLeft="@dimen/padding_three_dip"
                  android:text="@string/lbl_star"
                  android:textColor="@color/RED"
                  android:textSize="@dimen/medium_text" />
          </LinearLayout>

          <TextView
              android:layout_width="@dimen/width_zero_dip"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"
              android:layout_gravity="center"
              android:text="@string/lbl_semi_colon"
              android:textColor="@android:color/black"
              android:textSize="@dimen/medium_text" />

          <Spinner
              android:id="@+id/sp_retailer_name"
              android:layout_width="@dimen/width_zero_dip"
              android:layout_height="wrap_content"
              android:layout_weight="0.98"
              android:paddingLeft="@dimen/padding_three_dip"
              android:paddingRight="@dimen/padding_three_dip"
              android:paddingStart="@dimen/padding_zero_dip"
              android:paddingEnd="@dimen/padding_zero_dip"
              android:textSize="@dimen/medium_text"
              style="@style/spinner_style"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="@dimen/padding_four_dip" >

          <LinearLayout
              android:layout_width="@dimen/width_zero_dip"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:orientation="horizontal"
              android:layout_weight="1"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="start"
                  android:paddingLeft="@dimen/padding_three_dip"
                  android:paddingStart="@dimen/padding_three_dip"
                  android:paddingRight="@dimen/padding_zero_dip"
                  android:paddingEnd="@dimen/padding_zero_dip"
                  android:text="@string/lbl_beat_name"
                  android:textColor="@color/TEXT_COLOR"
                  android:textSize="@dimen/medium_text" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="top|center"
                  android:paddingLeft="@dimen/padding_three_dip"
                  android:text="@string/lbl_star"
                  android:textColor="@color/RED"
                  android:visibility="gone"
                  android:textSize="@dimen/medium_text" />
          </LinearLayout>

          <TextView
              android:layout_width="@dimen/width_zero_dip"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"
              android:layout_gravity="center"
              android:text="@string/lbl_semi_colon"
              android:textColor="@android:color/black"
              android:textSize="@dimen/medium_text" />

          <TextView
              android:id="@+id/tv_beat_name"
              android:layout_width="@dimen/width_zero_dip"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="start"
              android:paddingLeft="@dimen/padding_three_dip"
              android:paddingRight="@dimen/padding_three_dip"
              android:textColor="@color/TEXT_COLOR"
              android:textSize="@dimen/medium_text" />
      </LinearLayout>


  </LinearLayout>

</FrameLayout>
