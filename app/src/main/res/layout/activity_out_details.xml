<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/WHITE"
    android:orientation="vertical">

    <include layout="@layout/appbar_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/HeaderTileBackground"
        android:visibility="gone">

        <TextView
            android:id="@+id/mainmenuHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_OutstandingBillDetails"
            android:textColor="@color/header_tile_text_color"
            android:textSize="@dimen/large_text" />
    </LinearLayout>


    <!--<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_three_dip" >

        <TextView
            android:id="@+id/tv_invoice_details_reatiler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/BLACK"
            android:textSize="@dimen/medium_text"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />

        </LinearLayout>-->
    <include layout="@layout/retailer_detail_header_lay" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height_one_dip"
        android:background="@color/line_color"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_five_dip"
        android:layout_marginBottom="@dimen/margin_four_dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@color/WHITE"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:orientation="horizontal" >


            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@color/WHITE"
                android:orientation="horizontal" >

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_gravity="center"
                    android:id="@+id/tv_in_history_status"
                    />

                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/lbl_inv_no"
                     android:textColor="@color/BLACK"
                     android:textSize="@dimen/medium_text"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="@dimen/padding_three_dip"
                     android:paddingRight="@dimen/padding_three_dip"
                     android:text="@string/lbl_semi_colon"
                     android:textColor="@color/BLACK"
                     android:textSize="@dimen/medium_text"/>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_inv_date"
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/medium_text"/>

                    <TextView
                        android:id="@+id/tv_invoice_document_number"
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/medium_text"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_zero_dip"
                    android:layout_weight="1"
                    android:background="@color/WHITE"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="@dimen/padding_three_dip"
                        android:text="@string/lbl_BillOutstandingDays"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/BLACK"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/lbl_semi_colon"
                        android:textSize="@dimen/medium_text"
                        android:textColor="@color/BLACK"
                        android:gravity="bottom" />
                    <TextView
                        android:id="@+id/tv_bill_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom|right"
                        android:paddingLeft="@dimen/padding_three_dip"
                        android:paddingRight="@dimen/padding_three_dip"
                        android:text="31/06/2016"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/medium_text"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_height_one_dip"
            android:background="@color/line_color"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/vertical_line_color"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_point_one_dip"
                android:layout_marginRight="@dimen/margin_point_one_dip"
                android:layout_weight="1"
                android:background="@color/light_alice_blue"
                android:gravity="center"
                android:text="@string/lbl_billed"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_point_one_dip"
                android:layout_marginRight="@dimen/margin_point_one_dip"
                android:layout_weight="1"
                android:background="@color/light_alice_blue"
                android:gravity="center"
                android:text="@string/lbl_paid"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_point_one_dip"
                android:layout_marginRight="@dimen/margin_point_one_dip"
                android:layout_weight="1"
                android:background="@color/light_alice_blue"
                android:gravity="center"
                android:text="@string/lbl_balance"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="@dimen/medium_text" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_height_one_dip"
            android:background="@color/line_color"/>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/vertical_line_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inv_net_amount"
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_point_one_dip"
                android:layout_marginRight="@dimen/margin_point_one_dip"
                android:layout_weight="1"
                android:paddingRight="@dimen/padding_three_dip"
                android:text=""
                android:gravity="right"
                android:background="@color/WHITE"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/BLACK"
                />


            />
            <TextView
                android:id="@+id/tv_inv_coll_amount"
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_point_one_dip"
                android:layout_marginRight="@dimen/margin_point_one_dip"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:gravity="right"
                android:paddingRight="@dimen/padding_three_dip"
                android:text=""
                android:textSize="@dimen/medium_text"
                android:textColor="@color/BLACK"/>

            />
            <TextView
                android:id="@+id/tv_inv_pen_amount"
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_point_one_dip"
                android:layout_marginRight="@dimen/margin_point_one_dip"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:gravity="right"
                android:paddingRight="@dimen/padding_three_dip"
                android:text=""
                android:textColor="@color/BLACK"
                android:textSize="@dimen/medium_text"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height_one_dip"
        android:background="@color/line_color"/>
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"  android:stretchColumns="*" >


            <!-- Row 1 with single column -->

            <!-- Row 2 with 3 columns -->


            <TableRow
                android:id="@+id/tableRow1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_billed"
                    android:id="@+id/textView2"
                    android:textColor="@color/BLACK"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/textview_border_bg_blue"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_paid"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:textColor="@color/BLACK"
                    android:gravity="center_horizontal"
                    android:background="@drawable/textview_border_bg_blue"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_balance"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textColor="@color/BLACK"
                    android:gravity="center_horizontal"
                    android:background="@color/LBL_BACKGROUND_ASH_COLOR"
                    />

            </TableRow>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_height_one_dip"
                android:background="@color/line_color"/>
            <TableRow
                android:id="@+id/tableRow2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,00,000"
                    android:id="@+id/tv_bill_val"
                    android:textColor="@color/BLACK"
                    android:layout_weight="1"
                    android:paddingRight="5dip"
                    android:gravity="right"
                    android:background="@drawable/textview_border_bg_white"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tv_bill_paid"
                    android:textColor="@color/BLACK"
                    android:layout_weight="1"
                    android:paddingRight="5dip"
                    android:gravity="right"
                    android:background="@drawable/textview_border_bg_white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_balance_amount"
                    android:textColor="@color/BLACK"
                    android:layout_weight="1"
                    android:paddingRight="5dip"
                    android:gravity="right"
                    android:background="@color/WHITE"
                    />
            </TableRow>

            <!-- Row 3 with 2 columns -->

        </TableLayout>
        <LinearLayout
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_height_one_dip"
            android:background="@color/line_color"/>

    <ScrollView
        android:id="@+id/scroll_invoice_his_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll_invoice_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>
    </LinearLayout>


</LinearLayout>
