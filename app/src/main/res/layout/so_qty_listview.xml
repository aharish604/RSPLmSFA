                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_four_dip">

                    <LinearLayout
                        android:layout_width="@dimen/width_zero_dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingEnd="@dimen/padding_zero_dip"
                            android:paddingLeft="@dimen/padding_three_dip"
                            android:paddingRight="@dimen/padding_zero_dip"
                            android:paddingStart="@dimen/padding_zero_dip"
                            android:text="@string/tvsoQty"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/util_normal_text_sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:paddingLeft="@dimen/padding_three_dip"
                            android:text="@string/lbl_star"
                            android:textColor="@color/RED"
                            android:textSize="@dimen/util_normal_text_sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/width_zero_dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="@string/lbl_semi_colon"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/util_normal_text_sp" />

                    <LinearLayout
                        android:layout_width="@dimen/width_zero_dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8">

                        <EditText
                            android:id="@+id/etsoQty"
                            style="@style/EditBookTextEdit"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:maxLength="13"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/util_normal_text_sp" />

                        <TextView
                            android:id="@+id/tvUomSOvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_five_dip"
                            android:gravity="left"
                            android:paddingLeft="@dimen/_2sdp"
                            android:singleLine="false"
                            android:text="ss"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/util_normal_text_sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_delivery_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/GREY"
                        android:paddingLeft="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/delivery_schedule"
                            android:textColor="@color/BLACK"
                            android:textSize="@dimen/util_normal_text_sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_add_schedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="18dp"
                            android:layout_marginRight="18dp"/>
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

