<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRow1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BLACK"
    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/llProductValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BLACK"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvQuantityHeading"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:padding="3sp"
            android:text="Silk Illusions Non Metallic"
            android:textColor="#000000"
            android:textSize="@dimen/medium_text"/>

        <TextView
            android:id="@+id/tvProdQuntyView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:padding="3sp"
            android:textColor="#000000"
            android:textSize="@dimen/medium_text" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:background="@color/WHITE"
            android:layout_weight="0.75"
            >


            <EditText
                android:id="@+id/editTextQuantityView"
                android:layout_width="0dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:padding="3sp"
                android:text=""
                android:layout_weight="0.80"
                android:textColor="#000000"
                style="@style/EditBookTextEdit"/>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_gravity="center"
                android:id="@+id/ib_delete_item"
                android:background="@color/WHITE"
                android:layout_weight="0.20"
                android:scaleType="centerInside" />





        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:background="#ffffff" >
    </LinearLayout>

</LinearLayout>