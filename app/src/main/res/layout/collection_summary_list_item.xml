<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vertical_line_color"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_ret_mobile_value"
            android:layout_width="@dimen/width_one_ten_dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_point_five_dip"
            android:layout_weight="1"
            android:background="@color/WHITE"
            android:gravity="center|center_vertical"
            android:paddingLeft="@dimen/padding_three_dip"
            android:paddingStart="@dimen/padding_three_dip"
            android:paddingRight="@dimen/padding_zero_dip"
            android:paddingEnd="@dimen/padding_zero_dip"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/tv_collection_time_value"
            android:layout_width="@dimen/width_100_dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE"
            android:gravity="center|center_vertical"
            android:paddingLeft="@dimen/padding_three_dip"
            android:paddingStart="@dimen/padding_three_dip"
            android:paddingRight="@dimen/padding_three_dip"
            android:paddingEnd="@dimen/padding_three_dip"
            android:layout_marginBottom="@dimen/margin_point_five_dip"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/medium_text" />



        <TextView
            android:id="@+id/tv_collection_amount"
            android:layout_width="@dimen/width_100_dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE"
            android:gravity="right|center_vertical"
            android:paddingLeft="@dimen/padding_three_dip"
            android:paddingStart="@dimen/padding_three_dip"
            android:paddingRight="@dimen/padding_three_dip"
            android:paddingEnd="@dimen/padding_three_dip"
            android:layout_marginBottom="@dimen/margin_point_five_dip"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/medium_text" />

        <LinearLayout
            android:layout_width="@dimen/width_twenty"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_point_five_dip">

            <ImageView
                android:id="@+id/iv_navigate_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height_point_five_dip"
        android:background="@color/line_color">
    </LinearLayout>

</LinearLayout>