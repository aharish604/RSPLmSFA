<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_appointment_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    tools:context=".appointment.AppointmentCreate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/appbar_layout"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/HeaderTileBackground"
            android:visibility="gone">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbl_appointment_create"
                android:textColor="@color/header_tile_text_color"
                android:textSize="@dimen/large_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/padding_four_dip" >

            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingRight="@dimen/padding_zero_dip"
                    android:paddingStart="@dimen/padding_zero_dip"
                    android:paddingEnd="@dimen/padding_zero_dip"
                    android:text="@string/lbl_retailer_name"
                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:text="@string/lbl_star"
                    android:visibility="gone"
                    android:textColor="@color/RED"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:text="@string/lbl_semi_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_text" />

            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_three_dip"
                android:paddingRight="@dimen/padding_three_dip"
                android:paddingTop="@dimen/padding_three_dip"
                android:paddingBottom="@dimen/padding_three_dip"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/relative_layout_spinner"
                    android:layout_width="@dimen/width_zero_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                    <TextView
                        android:id="@+id/tv_retailer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textColor="@color/TEXT_COLOR"
                        android:textSize="@dimen/medium_text" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="@dimen/width_zero_dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_customer_edit"
                    android:layout_weight="0.3"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/padding_four_dip" >

            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingStart="@dimen/padding_zero_dip"
                    android:paddingRight="@dimen/padding_zero_dip"
                    android:paddingEnd="@dimen/padding_zero_dip"
                    android:text="@string/lbl_beat_name"
                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:text="@string/lbl_star"
                    android:textColor="@color/RED"
                    android:visibility="gone"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:text="@string/lbl_semi_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/tv_beat_name"
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_three_dip"
                android:paddingRight="@dimen/padding_three_dip"
                android:textColor="@color/TEXT_COLOR"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/padding_four_dip" >

            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingRight="@dimen/padding_zero_dip"
                    android:paddingStart="@dimen/padding_zero_dip"
                    android:paddingEnd="@dimen/padding_zero_dip"
                    android:text="@string/lbl_activity_type"
                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:text="@string/lbl_star"
                    android:textColor="@color/RED"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:text="@string/lbl_semi_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_text" />

            <Spinner
                android:id="@+id/sp_activity_type"
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.98"
                android:paddingLeft="@dimen/padding_three_dip"
                android:paddingRight="@dimen/padding_three_dip"
                android:paddingStart="@dimen/padding_zero_dip"
                android:paddingEnd="@dimen/padding_zero_dip"
                android:textSize="@dimen/medium_text"
                style="@style/spinner_style"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/padding_four_dip" >

            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingStart="@dimen/padding_zero_dip"
                    android:paddingRight="@dimen/padding_zero_dip"
                    android:paddingEnd="@dimen/padding_zero_dip"
                    android:text="@string/lbl_appointment_date"
                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:text="@string/lbl_star"
                    android:textColor="@color/RED"
                    android:visibility="visible"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:text="@string/lbl_semi_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/tv_appointment_date"
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="@dimen/padding_three_dip"
                android:paddingRight="@dimen/padding_three_dip"
                android:paddingTop="@dimen/padding_three_dip"
                android:paddingBottom="@dimen/padding_three_dip"
                android:drawableRight="@drawable/ic_calendar"
                android:hint="@string/lbl_appointment_date"
                android:text=""
                android:textColor="@color/BLACK"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/padding_four_dip" >

            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingStart="@dimen/padding_zero_dip"
                    android:paddingRight="@dimen/padding_zero_dip"
                    android:paddingEnd="@dimen/padding_zero_dip"
                    android:text="@string/lbl_appointment_duration"
                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text"
                    android:id="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:text="@string/lbl_star"
                    android:textColor="@color/RED"
                    android:visibility="visible"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:text="@string/lbl_semi_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_text" />

            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_appointment_starttime"
                    android:layout_width="@dimen/width_zero_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingRight="@dimen/padding_three_dip"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text=""
                    android:hint="@string/hint_start_time"
                    android:ellipsize="none"

                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text" />


                <TextView
                    android:id="@+id/tv_appointment_endtime"
                    android:layout_width="@dimen/width_zero_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingRight="@dimen/padding_three_dip"
                    android:drawablePadding="@dimen/_4sdp"
                    android:text=""
                    android:hint="@string/hint_end_time"
                    android:ellipsize="none"

                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:padding="@dimen/padding_four_dip" >
            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="@dimen/padding_three_dip"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:paddingRight="@dimen/padding_zero_dip"
                    android:paddingEnd="@dimen/padding_zero_dip"
                    android:text="@string/lbl_remarks"
                    android:textColor="@color/TEXT_COLOR"
                    android:textSize="@dimen/medium_text"/>
                <TextView
                    android:id="@+id/tv_remarks_mandatory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:paddingLeft="@dimen/padding_three_dip"
                    android:text="@string/lbl_star"
                    android:textColor="@color/RED"
                    android:visibility="invisible"
                    android:textSize="@dimen/medium_text" />

            </LinearLayout>


            <TextView
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:text="@string/lbl_semi_colon"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_text" />

            <EditText
                android:id="@+id/edit_remarks"
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/width_eighty_dip"
                android:layout_weight="1"

                android:paddingLeft="@dimen/padding_three_dip"
                android:paddingRight="@dimen/padding_three_dip"
                android:textSize="@dimen/medium_text"
                style="@style/EditBookTextEdit"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
