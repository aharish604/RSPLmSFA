<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".visit.TechnicalTeamCustomerMainMenuActivity">

    <include layout="@layout/appbar_layout"/>
    <include layout="@layout/retailer_detail_header_lay" />
    <View
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>
    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewDate"
            android:text="Date"
            android:padding="@dimen/_4sdp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content" />
        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textViewTodayDate"
            android:layout_width="0dp"
            android:text="drer"
            android:paddingRight="@dimen/_4sdp"
            android:gravity="end|center"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>
    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewTypeOfConstruction"
            android:text="Activity Conducted"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:padding="@dimen/_4sdp"
            android:layout_height="match_parent" />
        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/spinnerActivityConducted"
            style="@style/spinner_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="" />
    </LinearLayout>
    <View
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>
</LinearLayout>
