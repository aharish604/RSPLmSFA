<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_value"
        android:layout_width="@dimen/width_zero_dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_point_five_dip"
        android:layout_weight="1.5"
        android:background="@color/WHITE"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/padding_three_dip"
        android:paddingStart="@dimen/padding_three_dip"
        android:paddingRight="@dimen/padding_zero_dip"
        android:paddingEnd="@dimen/padding_zero_dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/BLACK"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text" />



    <TextView
        android:id="@+id/tv_target_value"
        android:layout_width="@dimen/width_zero_dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/padding_zero_dip"
        android:paddingStart="@dimen/padding_zero_dip"
        android:paddingRight="@dimen/padding_three_dip"
        android:paddingEnd="@dimen/padding_zero_dip"
        android:layout_marginBottom="@dimen/margin_point_five_dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/icon_text_blue"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text" />

    <TextView
        android:id="@+id/tv_mtd_value"
        android:layout_width="@dimen/width_zero_dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/padding_zero_dip"
        android:paddingStart="@dimen/padding_zero_dip"
        android:paddingRight="@dimen/padding_three_dip"
        android:paddingEnd="@dimen/padding_zero_dip"
        android:layout_marginBottom="@dimen/margin_point_five_dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/icon_text_blue"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text" />

    <TextView
        android:id="@+id/tv_btd_value"
        android:layout_width="@dimen/width_zero_dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:gravity="right|center_vertical"
        android:paddingLeft="@dimen/padding_zero_dip"
        android:paddingStart="@dimen/padding_zero_dip"
        android:paddingRight="@dimen/padding_three_dip"
        android:paddingEnd="@dimen/padding_zero_dip"
        android:layout_marginBottom="@dimen/margin_point_five_dip"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/icon_text_blue"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text" />

</LinearLayout>