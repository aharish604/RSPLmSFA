<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:paddingBottom="@dimen/_7sdp"
    android:paddingTop="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.2"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_calendar"
            android:gravity="center"
            android:textSize="@dimen/util_normal_text_sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="right">

        <EditText
            android:id="@+id/et_sub_qty"
            style="@style/EditBookTextEdit"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:inputType="numberDecimal"
            android:maxLength="13"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/util_normal_text_sp" />

        <TextView
            android:id="@+id/tvUomSOvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_five_dip"
            android:gravity="left"
            android:paddingLeft="@dimen/_2sdp"
            android:singleLine="false"
            android:text="ss"
            android:textColor="@color/BLACK"
            android:textSize="@dimen/util_normal_text_sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.6" />
</LinearLayout>