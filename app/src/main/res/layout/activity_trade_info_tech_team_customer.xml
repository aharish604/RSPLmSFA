<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".visit.TradeInfoTechTeamCustomerActivity">
    <include layout="@layout/appbar_layout"/>
    <include layout="@layout/retailer_detail_header_lay" />
    <View
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>
    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTotalTradePotential"
            android:text="Total Trade Potential"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editTextTotalTradePotential"
            android:layout_width="0dp"
            android:inputType="number"
            android:gravity="end|center"
            android:maxLines="1"
            style="@style/EditBookTextEdit"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="MT"
            android:padding="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewTotalNonTradePotential"
            android:text="Total Non Trade Potential"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editTextTotalNonTradePotential"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="end|center"
            android:maxLines="1"
            style="@style/EditBookTextEdit"
            android:layout_height="wrap_content" />
        <TextView
            android:text="MT"
            android:padding="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewBgPotential"
            android:text="BG Potential"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editTextBgPotential"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLines="1"
            android:gravity="end|center"
            style="@style/EditBookTextEdit"
            android:layout_height="wrap_content" />
        <TextView
            android:text="MT"
            android:padding="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

    <TextView
        android:id="@+id/textViewOtherBrandAvailable"
        android:text="Other Brand Available"
        android:padding="@dimen/_5sdp"
        android:background="@color/light_alice_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBoxUTCL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewUTCL"
            android:text="UTCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBoxACC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewACC"
            android:text="ACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxOCL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewOCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OCL" />
    </LinearLayout>
</LinearLayout>
