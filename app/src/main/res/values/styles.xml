    <style name="SubItemTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/util_normal_text_sp</item>
        <item name="android:lineSpacingExtra">@dimen/util_textview_line_spacing</item>
    </style>

    <style name="UtilsTabLayout" parent="Widget.Design.TabLayout">
        <!-- <item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/secondaryColor</item>
        <!-- <item name="tabIndicatorHeight">4dp</item>
         <item name="tabPaddingStart">6dp</item>
         <item name="tabPaddingEnd">6dp</item>-->
