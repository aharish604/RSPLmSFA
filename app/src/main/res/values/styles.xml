        <item name="android:paddingLeft">@dimen/padding_normal_16</item>
        <item name="android:paddingRight">@dimen/padding_normal_16</item>
        <item name="android:height">@dimen/nav_item_height</item>
    </style>
    <style name="Headers" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/util_normal_text_sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/padding_normal_16</item>
        <item name="android:paddingTop">@dimen/padding_normal_16</item>
        <item name="android:paddingLeft">@dimen/padding_normal_16</item>
        <item name="android:paddingRight">@dimen/padding_normal_16</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActionBarStyle" parent="android:style/Widget.Holo.ActionBar">
        <item name="titleTextStyle">@style/NoTitleText</item>
        <item name="subtitleTextStyle">@style/NoTitleText</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <!-- <style name="translucentDialog" parent="android:Theme.Black.NoTitleBar">
         <item name="android:windowBackground">@android:color/transparent</item>
     </style>-->

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Sphinx.Button.Borderless</item>
    </style>


    <style name="CustomDialogTheme2" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:background">@color/icon_text_blue</item>
        <item name="android:layout_marginLeft">@dimen/width_negitive_ten</item>
        <item name="android:layout_marginRight">@dimen/width_negitive_ten</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="StyledDialog" parent="@android:style/Theme.Panel">
        <item name="android:background">@color/icon_text_blue</item>

        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/WHITE</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>

        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>


    <style name="PopupMenuStyle" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:theme">@android:style/Theme.NoTitleBar</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/WHITE</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>

    </style>


    <style name="CustomDialogTheme4" parent="@android:style/Theme.Dialog">
        <!-- <item name="android:background">@color/icon_text_blue</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/light_alice_blue</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:tint">@color/actionBarMenuIconColor</item>
        <!--<item name="app:backgroundTint">@color/floatingActionButtonColor</item>-->
    </style>


    <style name="CardViewStyle">
        <item name="android:layout_marginLeft">@dimen/padding_normal_8</item>
        <item name="android:layout_marginRight">@dimen/padding_normal_8</item>
        <item name="android:layout_marginTop">@dimen/padding_normal_8</item>
        <item name="android:layout_marginBottom">@dimen/padding_normal_8</item>
    </style>

    <style name="UtilsSubItem" parent="@style/SelectableItemBackground">
        <item name="android:paddingTop">@dimen/padding_normal_8</item>
        <item name="android:paddingBottom">@dimen/padding_normal_16</item>
        <item name="android:paddingRight">@dimen/padding_normal_16</item>
        <item name="android:paddingLeft">@dimen/padding_normal_8</item>
    </style>

    <style name="CustomDialogTheme5">
        <item name="android:bottomBright">@color/light_alice_blue</item>
        <item name="android:bottomDark">@color/light_alice_blue</item>
        <item name="android:bottomMedium">@color/light_alice_blue</item>
        <item name="android:centerBright">@color/light_alice_blue</item>
        <item name="android:centerDark">@color/light_alice_blue</item>
        <item name="android:centerMedium">@color/light_alice_blue</item>
        <item name="android:fullBright">@color/BLUE</item>
        <item name="android:fullDark">@color/BLUE</item>
        <item name="android:topBright">@color/BLUE</item>
        <item name="android:topDark">@color/BLUE</item>
    </style>

