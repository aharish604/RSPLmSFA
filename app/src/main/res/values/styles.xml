    </style>

    <style name="UtilsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <!-- <item name="android:textSize">12sp</item>-->
        <!--<item name="android:textColor">@color/primaryTextColor</item>-->
        <item name="textAllCaps">true</item>
    </style>

    <style name="Label" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/BLACK</item>
    </style>

    <style name="MediumHeaderTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/util_sub_title_sp</item>
        <item name="android:lineSpacingExtra">@dimen/util_textview_line_spacing</item>
        <!--<item name="android:textColor">@color/secondaryTextColor</item>-->
    </style>

    <style name="Header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/util_normal_text_sp</item>
        <item name="android:textColor">@color/grp_header</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/padding_normal_8</item>
